modules = ["web", "nodejs-20"]

[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["unzip"]

[workflows]
runButton = "Project"

[workflows.serve]
type = "run"
name = "Serve HTML Site"
run = "python3 -m http.server 8080 --directory ."

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "web-server"

[[workflows.workflow]]
name = "web-server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "http-server -p 5000 -a 0.0.0.0 --cors -c-1"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 34895
externalPort = 3000

[[ports]]
localPort = 41503
externalPort = 3001
